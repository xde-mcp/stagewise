{
  "name": "@stagewise/agent-runtime-vscode",
  "version": "0.0.2",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "scripts": {
    "build": "tsx build.ts && tsc --emitDeclarationOnly",
    "dev": "tsx build.ts --watch",
    "clean": "rimraf dist",
    "lint": "biome check .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "ignore": "^7.0.5",
    "minimatch": "^9.0.5"
  },
  "devDependencies": {
    "@stagewise/agent-runtime-interface": "workspace:*",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.20.1",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0",
    "vscode": "^1.1.37"
  }
}
